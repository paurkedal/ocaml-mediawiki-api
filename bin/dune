(library
  (name common)
  (wrapped false)
  (modules Template Utils)
  (preprocess (pps lwt_ppx))
  (libraries mediawiki_api))

(executable
  (name mw_edit)
  (modules Mw_edit)
  (preprocess (pps lwt_ppx))
  (libraries cmdliner common mediawiki_api))

(executable
  (name mw_filter)
  (modules Mw_filter)
  (preprocess (pps lwt_ppx))
  (libraries cmdliner common mediawiki_api))

(install
  (section bin)
  (files
    (mw_edit.exe as mw-edit)
    (mw_filter.exe as mw-filter)))
